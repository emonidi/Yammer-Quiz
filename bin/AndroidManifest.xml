<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virtual_affairs.yammer_quiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.virtual_affairs.yammer_quiz.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.virtual_affairs.yammer_quiz.SignInActivity"
            android:label="@string/app_name" >
         </activity>

        <activity android:name="com.virtual_affairs.yammer_quiz.WhoQuestion"></activity>

        <activity
            android:name="com.virtual_affairs.yammer_quiz.WhoNamesQuestionActivity"
            android:label="@string/app_name" >
        </activity>


        <activity android:name="StepOneActivity">
			<intent-filter>
			<action android:name="android.intent.action.VIEW"></action>
			<category android:name="android.intent.category.DEFAULT"></category>
			<category android:name="android.intent.category.BROWSABLE"></category>
			<data android:scheme="step-one-activity"></data>
			</intent-filter>
		</activity>
    </application>

</manifest>
